{
  "compilerOptions": {
    "types": ["@cloudflare/workers-types", "node"],
    "lib": ["es2022"],
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
