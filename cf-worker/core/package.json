	"private": true,
	"type": "module",
	"scripts": {
		"deploy": "wrangler deploy",
		"dev": "wrangler dev --test-scheduled",
		"start": "wrangler dev --test-scheduled",
		"test": "pnpm run test:unit",
		"test:unit": "vitest --config vitest.unit.config.mts --run",
